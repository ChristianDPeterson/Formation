generator client {
  provider = "prisma-client-js"
}

// generate type-safe raw SQL queries qwith kysely
generator kysely {
  provider = "prisma-kysely"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String?
  username      String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  role          Role      @default(USER)

  tables Table[]
}

enum Role {
  USER
  ADMIN
}

model Table {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  name String
